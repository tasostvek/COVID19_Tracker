<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns  = "http://www.w3.org/ns/widgets" 
	xmlns:gap  = "http://phonegap.com/ns/1.0"        
	id = "com.phonegap.example" 
	versionCode = "10" 
	version = "1.0.0" >

	<!-- versionCode is optional and Android only -->  
	<name>2305 Final</name>  
	<description>
		2305 Final Tasos
	</description>  
	<author href="https://cis.temple.edu/~tuf91473/" email="tuf91473@temple.edu">     
		Tasos Tzivekis
	</author>  
	<icon src="images/favicon.png" />  
	<content src="index.html" />  
	<plugin name="cordova-plugin-whitelist" spec="1.3.3" />  
	<access origin="*" />  
	<allow-intent href="http://*/*" />  
	<allow-intent href="https://*/*" />  
	<allow-intent href="tel:*" />  
	<allow-intent href="sms:*" />  
	<allow-intent href="mailto:*" />  
	<allow-intent href="geo:*" />  
	<!-- Allow links to example.com -->  
	<allow-navigation href="http://cis-linux2.temple.edu/*" />  
	<!-- Wildcards are allowed for the protocol, as a prefix to the host, or as 
	a suffix to the path -->  
	<allow-navigation href="*://*.temple.edu/*" />  
	<!-- A wildcard can be used to whitelist the entire network, over HTTP and HTTPS.     
	*NOT RECOMMENDED* -->  
	<allow-navigation href="*" />  
	<!-- The above is equivalent to these three declarations -->  
	<allow-navigation href="http://*/*" />  
	<allow-navigation href="https://*/*" />  
	<allow-navigation href="data:*" />  
	<platform name="android">
		<preference name="SplashScreen" value="images/splash.png" />
		<preference name="SplashScreenDelay" value="2000" />
		<feature name="Media">
			<param name="android-package" value="org.apache.cordova.media.AudioHandler" />
		</feature>      
		<allow-intent href="market:*" />  
	</platform>  
	<platform name="ios">    
		<allow-intent href="itms:*" />    
		<allow-intent href="itms-apps:*" />
		<feature name="Media">
			<param name="ios-package" value="CDVSound" />
		</feature>  
	</platform>
</widget>